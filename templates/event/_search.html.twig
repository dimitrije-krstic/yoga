<form method="GET">
    <div class="row mt-3 mb-3">

        <div class="col-12 col-sm-5 col-md-4 col-lg-3 mb-3">
            <div>
                <select name="category" class="form-control" onchange="this.form.submit()" >
                    <option value="5">all</option>
                    <option value="1" {% if app.request.query.get('category') == 1 %}selected="selected"{% endif %}>Asanas & Pranayamas</option>
                    <option value="2" {% if app.request.query.get('category') == 2 %}selected="selected"{% endif %}>Guided Meditation</option>
                    <option value="3" {% if app.request.query.get('category') == 3 %}selected="selected"{% endif %}>Kirtan & Mantra Chanting</option>
                    <option value="4" {% if app.request.query.get('category') == 4 %}selected="selected"{% endif %}>Satsang</option>
                </select>
            </div>
        </div>

        <div class="col-12 col-sm-7 col-md-6 col-lg-5 mb-3" >
            <div class="input-group">

                <div class="date datetimepicker3" id="datepickerFrom" data-target-input="nearest" style="width:43%">
                    <input type="text" name="from" class="form-control datetimepicker-input" value="{{ app.request.query.get('from') }}"
                           placeholder="from" data-target="#datepickerFrom"  data-toggle="datetimepicker" autocomplete="off">
                </div>

                <div class="input-group-append date datetimepicker3" id="datepickerTo" data-target-input="nearest" style="width:43%">
                    <input type="text" name="to" class="form-control datetimepicker-input" value="{{ app.request.query.get('to') }}"
                           placeholder="to" data-target="#datepickerTo"  data-toggle="datetimepicker" autocomplete="off" >
                </div>

                <div class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary btn-block">
                        <span class="fa fa-search"></span>
                    </button>
                </div>
            </div>
        </div>

        {% if app.user %}
            <div class="col-12 col-md-2">
                <span style="padding-right:15px; padding-left:5px;">
                    {% if currentRoute == 'app_event_bookmark_list' %}
                        <i class="far fa-bookmark fa-2x" style="color:#800080; padding-top:3px;"></i>
                      {% else %}
                        <a href="{{ path('app_event_bookmark_list') }}">
                            <div class="far fa-bookmark fa-2x tooltip-show" style="color:black; padding-top:3px;" title="bookmarked events"></div>
                         </a>
                    {% endif %}
                </span>
                <span>
                    {% if currentRoute == 'app_event_review_list'  %}
                        <div class="fas fa-edit fa-2x" style="color:#800080;"></div>
                    {% else %}
                        <a href="{{ path('app_event_review_list') }}" >
                            <div class="far fa-edit fa-2x tooltip-show" style="color:black;" title="leave a review"></div>
                        </a>
                    {% endif %}
                </span>
            </div>
        {% endif %}

    </div>
</form>