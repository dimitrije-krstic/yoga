<form method="GET">
    <div class="input-group mb-3 mt-3">
        <input type="text"
               name={{ name }}
               class="form-control"
               value="{{ app.request.query.get(name) }}"
               placeholder="{% if placeholder is defined %}{{ placeholder }}{% else %}Search...{% endif %}"
        >
        <div class="input-group-append">
            <button type="submit"
                    class="btn btn-outline-secondary">
                <span class="fa fa-search"></span>
            </button>
        </div>
    </div>
</form>
